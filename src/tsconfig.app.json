{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@auth/*": [ "app/auth/*" ],
      "@core/*": [ "app/core/*" ],
      "@dom_comps/*": [ "app/modules/domains/components/*" ],
      "@shared/*": [ "app/shared/*" ],
      "@environment/*": [ "environments/*" ],
      "@modules/*": [ "app/modules/*" ],
      "@mocks/*": [ "app/mocks/*" ],
      "@contracts/*": [ "app/shared/contracts/*" ],
      "@directives/*": [ "app/modules/directives/*" ],
      "@node_modules/*": [ "../node_modules/*" ],
      "@root/*": [ "./*" ],
      "@app/*": [ "app/*" ],
      "@styles/*": [ "styles/*" ]
    },
    "outDir": "../out-tsc/app",
    "module": "es2020",
    "types": []
  },
  "files": [
    "main.ts",
    //"**/*.spec.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
